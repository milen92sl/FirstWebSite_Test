
@{
	ViewData["Title"] = "Index";
}

<h1>TVs:</h1>

<div>
	<div class="row">

		@foreach (var TV in Model)
		{
		<div class="col-md-4">
			<div class="row">
				<h1>@TV.Name</h1>
			</div>
			<div class="row">
				<a href="/Television/Details/@TV.id">
					<img src="@TV.Image" width="300" height="400" />
				</a>
			</div>
			<div class="row">
				<div class="col-md-6">
					<form asp-action="Create"
						  asp-controller="Television"
						  method="get">
						
						<button type="submit" class="btn-primary">Create</button>
					</form>
				</div>
				<div class="col-md-6">
					<form asp-action="Delete"
						  asp-controller="Television"
						  method="delete">
						<input type="hidden"
							   name="id"
							   value="@TV.id" />
						<button type="submit" class="btn-danger">Delete</button>
					</form>
				</div>
				</div>
			</div>
			}
		</div>
</div>
